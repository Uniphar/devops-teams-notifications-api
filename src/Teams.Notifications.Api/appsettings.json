{
  "Logging": {
    "LogLevel": {
      // Set default log level to Information
      "Default": "Information",
      // Only log warnings from MS
      "Microsoft": "Warning",
      // Azure.Identity also posts a lot of info level logs
      "Azure.Identity": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AgentApplicationOptions": {
    "StartTypingTimer": false,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ]
}
