{
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "**LogicAppFlow:** {{LogicAppFlow:string?}}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "**Timestamp:** {{TimeStamp:string}}",
      "wrap": true,
      "spacing": "none"
    },
    {
      "type": "TextBlock",
      "text": "**OriginalBlobUri:** {{OriginalBlobUri:string?}}",
      "wrap": true,
      "spacing": "none"
    },
    {
      "type": "TextBlock",
      "text": "**FailedFile:** {{FileName:file?}}",
      "wrap": true,
      "spacing": "none"
    },
    {
      "type": "TextBlock",
      "weight": "bolder",
      "color": "attention",
      "text": "**Type of error:** {{ObjectType:string}}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "weight": "bolder",
      "text": "**Error:**",
      "wrap": true,
      "spacing": "medium"
    },
    {
      "type": "TextBlock",
      "color": "attention",
      "text": "{{ErrorMessage:string}}",
      "wrap": true,
      "spacing": "none"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "id": "process",
      "data": {
        "PostOriginalBlobUri": "{{OriginalBlobUri:string?}}",
        "PostFileStream": "{{FileUrl:file?}}",
        "PostSuccessMessage": "Sent the file to frontgate for reprocessing!"
      },
      "verb": "process",
      "title": "üîÅ Reprocess File"
    },
    {
      "type": "Action.OpenUrl",
      "url": "{{FileUrl:file?}}",
      "title": "üìÇ Download file"
    }
  ]
}